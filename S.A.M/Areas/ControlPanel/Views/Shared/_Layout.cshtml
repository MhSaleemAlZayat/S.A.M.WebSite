@inject S.A.M.Helper.Services.AspIdentity.UserInfo.IUserInfoService UserInfoService
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Syrian Academic Movement - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary': '#007B3A',
                        'secondary': '#CF0821',
                        'sidebar': '#1e293b',
                        'sidebar-hover': '#334155',
                    }
                }
            },
            darkMode: 'class'
        }
    </script>
    <link rel="stylesheet" href="~/css/controlpanel/site.css">
</head>
<body class="bg-gray-100 dark:bg-gray-900">
    <!-- Sidebar -->
    <div id="sidebar" class="fixed top-0 h-full w-64 bg-sidebar text-white sidebar-transition z-30 left-0 rtl:right-0 rtl:left-auto">
        <!-- Sidebar Header -->
        <div class="p-6 border-b border-gray-700">
            <div class="flex items-center space-x-3 rtl:space-x-reverse">
                <img src="/placeholder.svg?height=40&width=40" alt="Logo" class="w-10 h-10 rounded">
                <div>
                    <h2 class="text-lg font-bold" data-translate="sam_admin">SAM Admin</h2>
                    <p class="text-sm text-gray-300" data-translate="control_panel">Control Panel</p>
                </div>
            </div>
        </div>

        <!-- Sidebar Navigation -->
        <div class="sidebar-content">
            <nav class="mt-6">
                <div class="px-6 mb-4">
                    <h3 class="text-xs uppercase text-gray-400 font-semibold" data-translate="main">Main</h3>
                </div>
                <a href="~/ControlPanel/Dashboard/Index" class="nav-item flex items-center px-6 py-3 text-gray-300 hover:bg-sidebar-hover hover:text-white transition-colors active" data-section="dashboard">
                    <i class="fas fa-tachometer-alt w-5"></i>
                    <span class="ml-3 rtl:ml-0 rtl:mr-3" data-translate="dashboard">Dashboard</span>
                </a>
                <a href="~/ControlPanel/ArticlesManagement/Index" class="nav-item flex items-center px-6 py-3 text-gray-300 hover:bg-sidebar-hover hover:text-white transition-colors" data-section="content">
                    <i class="fas fa-newspaper w-5"></i>
                    <span class="ml-3 rtl:ml-0 rtl:mr-3" data-translate="articles_management">Content Management</span>
                </a>
                <a href="#" class="nav-item flex items-center px-6 py-3 text-gray-300 hover:bg-sidebar-hover hover:text-white transition-colors" data-section="media">
                    <i class="fas fa-photo-video w-5"></i>
                    <span class="ml-3 rtl:ml-0 rtl:mr-3" data-translate="media_library">Media Library</span>
                </a>
                <a href="#" class="nav-item flex items-center px-6 py-3 text-gray-300 hover:bg-sidebar-hover hover:text-white transition-colors" data-section="media">
                    <i class="fa-solid fa-file-lines"></i>
                    <span class="ml-3 rtl:ml-0 rtl:mr-3" data-translate="pages_management">Pages Management</span>
                </a>
                <a href="#" class="nav-item flex items-center px-6 py-3 text-gray-300 hover:bg-sidebar-hover hover:text-white transition-colors" data-section="media">
                    <i class="fa-solid fa-comment-dots"></i>
                    <span class="ml-3 rtl:ml-0 rtl:mr-3" data-translate="comments">Comments</span>
                </a>
                <a href="#" class="nav-item flex items-center px-6 py-3 text-gray-300 hover:bg-sidebar-hover hover:text-white transition-colors" data-section="media">
                    <i class="fa-solid fa-layer-group"></i>
                    <span class="ml-3 rtl:ml-0 rtl:mr-3" data-translate="categories">Categories</span>
                </a>
                <a href="#" class="nav-item flex items-center px-6 py-3 text-gray-300 hover:bg-sidebar-hover hover:text-white transition-colors" data-section="users">
                    <i class="fas fa-users w-5"></i>
                    <span class="ml-3 rtl:ml-0 rtl:mr-3" data-translate="user_management">User Management</span>
                </a>
                
                <div class="px-6 mb-4 mt-8">
                    <h3 class="text-xs uppercase text-gray-400 font-semibold" data-translate="appearance">Appearance</h3>
                </div>
                <a href="#" class="nav-item flex items-center px-6 py-3 text-gray-300 hover:bg-sidebar-hover hover:text-white transition-colors" data-section="analytics">
                    <i class="fa-solid fa-bars"></i>
                    <span class="ml-3 rtl:ml-0 rtl:mr-3" data-translate="menus">Menus</span>
                </a>
                <a href="#" class="nav-item flex items-center px-6 py-3 text-gray-300 hover:bg-sidebar-hover hover:text-white transition-colors" data-section="analytics">
                    <i class="fa-solid fa-superscript"></i>
                    <span class="ml-3 rtl:ml-0 rtl:mr-3" data-translate="header">Header</span>
                </a>
                <a href="#" class="nav-item flex items-center px-6 py-3 text-gray-300 hover:bg-sidebar-hover hover:text-white transition-colors" data-section="analytics">
                    <i class="fa-solid fa-subscript"></i>
                    <span class="ml-3 rtl:ml-0 rtl:mr-3" data-translate="footer">Footer</span>
                </a>

                <div class="px-6 mb-4 mt-8">
                    <h3 class="text-xs uppercase text-gray-400 font-semibold" data-translate="analytics">Analytics</h3>
                </div>
                <a href="#" class="nav-item flex items-center px-6 py-3 text-gray-300 hover:bg-sidebar-hover hover:text-white transition-colors" data-section="analytics">
                    <i class="fas fa-chart-bar w-5"></i>
                    <span class="ml-3 rtl:ml-0 rtl:mr-3" data-translate="analytics">Analytics</span>
                </a>
                <a href="#" class="nav-item flex items-center px-6 py-3 text-gray-300 hover:bg-sidebar-hover hover:text-white transition-colors" data-section="reports">
                    <i class="fas fa-file-alt w-5"></i>
                    <span class="ml-3 rtl:ml-0 rtl:mr-3" data-translate="reports">Reports</span>
                </a>

                <div class="px-6 mb-4 mt-8">
                    <h3 class="text-xs uppercase text-gray-400 font-semibold" data-translate="settings">Settings</h3>
                </div>
                <a href="#" class="nav-item flex items-center px-6 py-3 text-gray-300 hover:bg-sidebar-hover hover:text-white transition-colors" data-section="languages">
                    <i class="fas fa-globe w-5"></i>
                    <span class="ml-3 rtl:ml-0 rtl:mr-3" data-translate="languages">Languages</span>
                </a>
                <a href="#" class="nav-item flex items-center px-6 py-3 text-gray-300 hover:bg-sidebar-hover hover:text-white transition-colors" data-section="settings">
                    <i class="fas fa-cog w-5"></i>
                    <span class="ml-3 rtl:ml-0 rtl:mr-3" data-translate="settings">Settings</span>
                </a>
            </nav>
        </div>

        <!-- Sidebar Footer -->
        <div class="sidebar-footer p-6">
            <div class="flex items-center space-x-3 rtl:space-x-reverse">
                <img src="/placeholder.svg?height=32&width=32" alt="Admin" class="w-8 h-8 rounded-full">
                <div class="flex-1">
                    <p class="text-sm font-medium" @* data-translate="admin_user" *@>@UserInfoService.UserName</p>
                    <p class="text-xs text-gray-400">@UserInfoService.UserEmail</p>
                </div>
                <button class="text-gray-400 hover:text-white transition-colors" onclick="confirmLogout()">
                    <i class="fas fa-sign-out-alt"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Sidebar Overlay -->
    <div id="sidebarOverlay" class="fixed inset-0 bg-black bg-opacity-50 z-20 hidden lg:hidden"></div>

    <div class="lg:ml-64 rtl:lg:ml-0 rtl:lg:mr-64">
        <!-- Top Bar -->
        <header class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700">
            <div class="flex items-center justify-between px-6 py-4">
                <div class="flex items-center space-x-4 rtl:space-x-reverse">
                    <button id="sidebarToggle" class="lg:hidden text-gray-600 dark:text-gray-300">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                    <h1 id="pageTitle" class="text-2xl font-bold text-gray-800 dark:text-white" data-translate="dashboard">Dashboard</h1>
                </div>

                <div class="flex items-center space-x-4 rtl:space-x-reverse">
                    <!-- Search -->
                    <div class="relative hidden md:block">
                        <input type="text" data-translate-placeholder="search" placeholder="Search..." class="w-64 pl-10 pr-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary rtl:pl-4 rtl:pr-10">
                        <i class="fas fa-search absolute left-3 top-3 text-gray-400 rtl:left-auto rtl:right-3"></i>
                    </div>

                    <!-- Language Switcher -->
                    <div class="language-switcher relative">
                        <button id="languageBtn" style="display:none;" class="flex items-center space-x-2 rtl:space-x-reverse text-gray-600 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white transition-colors">
                            <i class="fas fa-globe text-lg"></i>
                            <span id="currentLanguage" class="text-sm font-medium">EN</span>
                            <i class="fas fa-chevron-down text-xs"></i>
                        </button>

                        <!-- Language Dropdown -->
                        <div id="languageDropdown" class="language-dropdown absolute right-0 rtl:right-auto rtl:left-0 mt-2 w-40 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 z-50">
                            <button class="language-option w-full flex items-center px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" data-lang="en">
                                <span class="w-6 h-4 bg-blue-500 rounded-sm mr-3 rtl:mr-0 rtl:ml-3 flex items-center justify-center text-white text-xs font-bold">EN</span>
                                <span>English</span>
                            </button>
                            <button class="language-option w-full flex items-center px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" data-lang="ar">
                                <span class="w-6 h-4 bg-green-500 rounded-sm mr-3 rtl:mr-0 rtl:ml-3 flex items-center justify-center text-white text-xs font-bold">ع</span>
                                <span>العربية</span>
                            </button>
                        </div>
                    </div>

                    <!-- Notifications -->
                    <div class="relative">
                        <button id="notificationBtn" class="relative text-gray-600 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white transition-colors">
                            <i class="fas fa-bell text-xl"></i>
                            <span id="notificationBadge" class="notification-badge absolute -top-1 -right-1 rtl:-right-auto rtl:-left-1 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">5</span>
                        </button>

                        <!-- Notification Dropdown -->
                        <div id="notificationDropdown" class="notification-dropdown absolute right-0 rtl:right-auto rtl:left-0 mt-2 w-80 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 z-50">
                            <!-- Dropdown Header -->
                            <div class="p-4 border-b border-gray-200 dark:border-gray-700">
                                <div class="flex items-center justify-between">
                                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white" data-translate="notifications">Notifications</h3>
                                    <div class="flex items-center space-x-2 rtl:space-x-reverse">
                                        <button id="markAllRead" class="text-sm text-primary hover:text-primary/80 transition-colors" data-translate="mark_all_read">
                                            Mark all read
                                        </button>
                                        <button id="clearAll" class="text-sm text-red-600 hover:text-red-700 transition-colors" data-translate="clear_all">
                                            Clear all
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Notification Tabs -->
                            <div class="flex border-b border-gray-200 dark:border-gray-700">
                                <button class="notification-tab flex-1 px-4 py-2 text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-white border-b-2 border-transparent active" data-tab="all">
                                    <span data-translate="all">All</span> (<span id="allCount">5</span>)
                                </button>
                                <button class="notification-tab flex-1 px-4 py-2 text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-white border-b-2 border-transparent" data-tab="unread">
                                    <span data-translate="unread">Unread</span> (<span id="unreadCount">3</span>)
                                </button>
                            </div>

                            <!-- Notifications List -->
                            <div id="notificationsList" class="max-h-96 overflow-y-auto">
                                <!-- System Notification -->
                                <div class="notification-item notification-unread p-4 border-b border-gray-100 dark:border-gray-700 cursor-pointer" data-id="1" data-read="false" data-type="system">
                                    <div class="notification-content">
                                        <div class="flex items-start space-x-3 rtl:space-x-reverse">
                                            <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center flex-shrink-0">
                                                <i class="fas fa-cog text-blue-600 dark:text-blue-400"></i>
                                            </div>
                                            <div class="flex-1 min-w-0">
                                                <p class="text-sm font-medium text-gray-800 dark:text-white" data-translate="system_update_available">System Update Available</p>
                                                <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="system_update_message">A new system update is available for installation.</p>
                                                <p class="text-xs text-gray-500 dark:text-gray-500 mt-1" data-translate="minutes_ago_2">2 minutes ago</p>
                                            </div>
                                            <button class="notification-action text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                                                <i class="fas fa-times text-sm"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <!-- User Registration Notification -->
                                <div class="notification-item notification-unread p-4 border-b border-gray-100 dark:border-gray-700 cursor-pointer" data-id="2" data-read="false" data-type="user">
                                    <div class="notification-content">
                                        <div class="flex items-start space-x-3 rtl:space-x-reverse">
                                            <div class="w-10 h-10 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center flex-shrink-0">
                                                <i class="fas fa-user-plus text-green-600 dark:text-green-400"></i>
                                            </div>
                                            <div class="flex-1 min-w-0">
                                                <p class="text-sm font-medium text-gray-800 dark:text-white" data-translate="new_user_registration">New User Registration</p>
                                                <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="user_registered_message">Ahmed Al-Damasci has registered for an account.</p>
                                                <p class="text-xs text-gray-500 dark:text-gray-500 mt-1" data-translate="minutes_ago_15">15 minutes ago</p>
                                            </div>
                                            <button class="notification-action text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                                                <i class="fas fa-times text-sm"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <!-- Content Notification -->
                                <div class="notification-item notification-unread p-4 border-b border-gray-100 dark:border-gray-700 cursor-pointer" data-id="3" data-read="false" data-type="content">
                                    <div class="notification-content">
                                        <div class="flex items-start space-x-3 rtl:space-x-reverse">
                                            <div class="w-10 h-10 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center flex-shrink-0">
                                                <i class="fas fa-newspaper text-purple-600 dark:text-purple-400"></i>
                                            </div>
                                            <div class="flex-1 min-w-0">
                                                <p class="text-sm font-medium text-gray-800 dark:text-white" data-translate="article_pending_review">Article Pending Review</p>
                                                <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="article_pending_message">"Educational Reforms 2024" is waiting for approval.</p>
                                                <p class="text-xs text-gray-500 dark:text-gray-500 mt-1" data-translate="hour_ago_1">1 hour ago</p>
                                            </div>
                                            <button class="notification-action text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                                                <i class="fas fa-times text-sm"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <!-- Security Notification -->
                                <div class="notification-item p-4 border-b border-gray-100 dark:border-gray-700 cursor-pointer" data-id="4" data-read="true" data-type="security">
                                    <div class="notification-content">
                                        <div class="flex items-start space-x-3 rtl:space-x-reverse">
                                            <div class="w-10 h-10 bg-red-100 dark:bg-red-900 rounded-full flex items-center justify-center flex-shrink-0">
                                                <i class="fas fa-shield-alt text-red-600 dark:text-red-400"></i>
                                            </div>
                                            <div class="flex-1 min-w-0">
                                                <p class="text-sm font-medium text-gray-800 dark:text-white" data-translate="security_alert">Security Alert</p>
                                                <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="security_alert_message">Unusual login activity detected from new location.</p>
                                                <p class="text-xs text-gray-500 dark:text-gray-500 mt-1" data-translate="hours_ago_3">3 hours ago</p>
                                            </div>
                                            <button class="notification-action text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                                                <i class="fas fa-times text-sm"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <!-- Comment Notification -->
                                <div class="notification-item p-4 cursor-pointer" data-id="5" data-read="true" data-type="comment">
                                    <div class="notification-content">
                                        <div class="flex items-start space-x-3 rtl:space-x-reverse">
                                            <div class="w-10 h-10 bg-yellow-100 dark:bg-yellow-900 rounded-full flex items-center justify-center flex-shrink-0">
                                                <i class="fas fa-comment text-yellow-600 dark:text-yellow-400"></i>
                                            </div>
                                            <div class="flex-1 min-w-0">
                                                <p class="text-sm font-medium text-gray-800 dark:text-white" data-translate="new_comment">New Comment</p>
                                                <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="new_comment_message">Someone commented on "Democratic Reforms in Syria".</p>
                                                <p class="text-xs text-gray-500 dark:text-gray-500 mt-1" data-translate="hours_ago_5">5 hours ago</p>
                                            </div>
                                            <button class="notification-action text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                                                <i class="fas fa-times text-sm"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Dropdown Footer -->
                            <div class="p-4 border-t border-gray-200 dark:border-gray-700">
                                <button class="w-full text-center text-sm text-primary hover:text-primary/80 transition-colors" data-translate="view_all_notifications">
                                    View All Notifications
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Theme Toggle -->
                    <button id="themeToggle" class="text-gray-600 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white transition-colors">
                        <i class="fas fa-moon text-xl dark:hidden"></i>
                        <i class="fas fa-sun text-xl hidden dark:block"></i>
                    </button>

                    <!-- User Profile Dropdown -->
                    <div class="relative">
                        <button id="userDropdownBtn" class="flex items-center space-x-2 rtl:space-x-reverse text-gray-600 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white transition-colors">
                            <div class="status-indicator">
                                <img src="/placeholder.svg?height=32&width=32" alt="Profile" class="w-8 h-8 rounded-full">
                            </div>
                            <div class="hidden md:block text-left rtl:text-right">
                                <p class="text-sm font-medium text-gray-800 dark:text-white" @* data-translate="admin_user" *@>@UserInfoService.UserName</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400" @* data-translate="administrator" *@>@UserInfoService.UserEmail</p>
                            </div>
                            <i class="fas fa-chevron-down text-sm"></i>
                        </button>

                        <!-- User Dropdown Menu -->
                        <div id="userDropdown" class="dropdown absolute right-0 rtl:right-auto rtl:left-0 mt-2 w-64 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 z-50">
                            <!-- User Info Header -->
                            <div class="p-4 border-b border-gray-200 dark:border-gray-700">
                                <div class="flex items-center space-x-3 rtl:space-x-reverse">
                                    <div class="status-indicator">
                                        <img src="/placeholder.svg?height=48&width=48" alt="Profile" class="w-12 h-12 rounded-full">
                                    </div>
                                    <div class="flex-1">
                                        <h3 class="text-sm font-semibold text-gray-800 dark:text-white" @* data-translate="admin_user" *@>@UserInfoService.UserName</h3>
                                        <p class="text-xs text-gray-600 dark:text-gray-400">admin@sam.org</p>
                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 mt-1">
                                            <span class="w-2 h-2 bg-green-400 rounded-full mr-1 rtl:mr-0 rtl:ml-1"></span>
                                            <span data-translate="online">Online</span>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- Menu Items -->
                            <div class="py-2">
                                <!-- Profile Section -->
                                <div class="px-4 py-2">
                                    <p class="text-xs font-semibold text-gray-400 dark:text-gray-500 uppercase tracking-wider" data-translate="profile">Profile</p>
                                </div>

                                <button class="dropdown-item w-full flex items-center px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700" onclick="openProfileModal()">
                                    <i class="fas fa-user w-5 text-gray-400 mr-3 rtl:mr-0 rtl:ml-3"></i>
                                    <div class="flex-1 text-left rtl:text-right">
                                        <p class="font-medium" data-translate="view_profile">View Profile</p>
                                        <p class="text-xs text-gray-500" data-translate="view_profile_desc">See your profile information</p>
                                    </div>
                                </button>

                                <button class="dropdown-item w-full flex items-center px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700" onclick="openEditProfileModal()">
                                    <i class="fas fa-edit w-5 text-gray-400 mr-3 rtl:mr-0 rtl:ml-3"></i>
                                    <div class="flex-1 text-left rtl:text-right">
                                        <p class="font-medium" data-translate="edit_profile">Edit Profile</p>
                                        <p class="text-xs text-gray-500" data-translate="edit_profile_desc">Update your information</p>
                                    </div>
                                </button>

                                <button class="dropdown-item w-full flex items-center px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700" onclick="openChangePasswordModal()">
                                    <i class="fas fa-key w-5 text-gray-400 mr-3 rtl:mr-0 rtl:ml-3"></i>
                                    <div class="flex-1 text-left rtl:text-right">
                                        <p class="font-medium" data-translate="change_password">Change Password</p>
                                        <p class="text-xs text-gray-500" data-translate="change_password_desc">Update your password</p>
                                    </div>
                                </button>

                                <div class="border-t border-gray-200 dark:border-gray-700 my-2"></div>

                                <!-- Logout -->
                                <form id="menu-logout" method="post" action="/ControlPanel/Account/Logout">
                                    @Html.AntiForgeryToken()
                                    <button class="dropdown-item w-full flex items-center px-4 py-3 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20" onclick="confirmLogout()">
                                        <i class="fas fa-sign-out-alt w-5 mr-3 rtl:mr-0 rtl:ml-3"></i>
                                        <div class="flex-1 text-left rtl:text-right">
                                            <p class="font-medium" data-translate="sign_out">Sign Out</p>
                                            <p class="text-xs text-red-500" data-translate="sign_out_desc">Sign out of your account</p>
                                        </div>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Content Area -->
        <main class="p-6">
            @RenderBody()
        </main>
    </div>

    <!-- Change Password Modal -->
    <div id="changePasswordModal" class="modal fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center">
        <div class="modal-content bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-md mx-4">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white" data-translate="change_password">Change Password</h3>
                    <button onclick="closeModal('changePasswordModal')" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <form class="p-6 space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" data-translate="current_password">Current Password</label>
                    <input type="password" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" data-translate="new_password">New Password</label>
                    <input type="password" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" data-translate="confirm_new_password">Confirm New Password</label>
                    <input type="password" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary">
                </div>
                <div class="flex justify-end space-x-3 rtl:space-x-reverse pt-4">
                    <button type="button" onclick="closeModal('changePasswordModal')" class="px-4 py-2 text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200" data-translate="cancel">
                        Cancel
                    </button>
                    <button type="submit" class="px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors" data-translate="update_password">
                        Update Password
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Profile Modal -->
    <div id="profileModal" class="modal fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center">
        <div class="modal-content bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-2xl mx-4">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white" data-translate="profile_information">Profile Information</h3>
                    <button onclick="closeModal('profileModal')" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="p-6">
                <div class="flex items-center space-x-6 rtl:space-x-reverse mb-6">
                    <div class="status-indicator">
                        <img src="/placeholder.svg?height=80&width=80" alt="Profile" class="w-20 h-20 rounded-full">
                    </div>
                    <div>
                        <h4 class="text-xl font-semibold text-gray-800 dark:text-white" @* data-translate="admin_user" *@>@UserInfoService.UserName</h4>
                        <p class="text-gray-600 dark:text-gray-400">admin@sam.org</p>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 mt-2">
                            <span class="w-2 h-2 bg-green-400 rounded-full mr-2 rtl:mr-0 rtl:ml-2"></span>
                            <span data-translate="online">Online</span>
                        </span>
                    </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <h5 class="font-medium text-gray-800 dark:text-white mb-3" data-translate="personal_information">Personal Information</h5>
                        <div class="space-y-3">
                            <div>
                                <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="full_name">Full Name</p>
                                <p class="font-medium text-gray-800 dark:text-white" @* data-translate="admin_user" *@>@UserInfoService.UserName</h4>
                                <p class="text-gray-600 dark:text-gray-400">admin@sam.org</p></p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="email">Email</p>
                                <p class="font-medium text-gray-800 dark:text-white">admin@sam.org</p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="role">Role</p>
                                <p class="font-medium text-gray-800 dark:text-white" @* data-translate="administrator" *@>@UserInfoService.UserName</p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <h5 class="font-medium text-gray-800 dark:text-white mb-3" data-translate="account_details">Account Details</h5>
                        <div class="space-y-3">
                            <div>
                                <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="member_since">Member Since</p>
                                <p class="font-medium text-gray-800 dark:text-white" data-translate="january_2024">January 2024</p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="last_login">Last Login</p>
                                <p class="font-medium text-gray-800 dark:text-white" data-translate="today_230pm">Today at 2:30 PM</p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="status">Status</p>
                                <p class="font-medium text-green-600" data-translate="active">Active</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Generic Modal for other actions -->
    <div id="genericModal" class="modal fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center">
        <div class="modal-content bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-md mx-4">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <h3 id="genericModalTitle" class="text-lg font-semibold text-gray-800 dark:text-white">Modal Title</h3>
                    <button onclick="closeModal('genericModal')" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="p-6">
                <p id="genericModalContent" class="text-gray-600 dark:text-gray-400">Modal content goes here...</p>
                <div class="flex justify-end space-x-3 rtl:space-x-reverse pt-4">
                    <button onclick="closeModal('genericModal')" class="px-4 py-2 text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200" data-translate="close">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Logout Confirmation Modal -->
    <div id="logoutModal" class="modal fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center">
        <div class="modal-content bg-white dark:bg-gray-800 rounded-lg shadow-xl w-full max-w-md mx-4">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white" data-translate="confirm_logout">Confirm Logout</h3>
                    <button onclick="closeModal('logoutModal')" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="p-6">
                <div class="flex items-center space-x-4 rtl:space-x-reverse mb-4">
                    <div class="w-12 h-12 bg-red-100 dark:bg-red-900 rounded-full flex items-center justify-center" >
                        <i class="fas fa-sign-out-alt text-red-600 dark:text-red-400 text-xl"></i>
                    </div>
                    <div>
                        <p class="text-gray-800 dark:text-white font-medium" data-translate="logout_confirmation">Are you sure you want to sign out?</p>
                        <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="logout_message">You will need to sign in again to access the admin panel.</p>
                    </div>
                </div>
                <div class="flex justify-end space-x-3 rtl:space-x-reverse pt-4">
                    <button onclick="closeModal('logoutModal')" class="px-4 py-2 text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200" data-translate="cancel">
                        Cancel
                    </button>
                    <button onclick="performLogout()" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors" data-translate="sign_out">
                        Sign Out
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Notification Toast -->
    <div id="notification" class="fixed top-4 right-4 rtl:right-auto rtl:left-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg notification hidden z-50">
        <div class="flex items-center">
            <i class="fas fa-check-circle mr-2 rtl:mr-0 rtl:ml-2"></i>
            <span>Action completed successfully!</span>
        </div>
    </div>

