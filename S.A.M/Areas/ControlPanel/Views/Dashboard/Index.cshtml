@{
    Layout = "~/Areas/ControlPanel/Views/Shared/_Layout.cshtml";
}
<!-- Dashboard Section -->
<div id="dashboard-section" class="content-section">
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="total_articles">Total Articles</p>
                    <p class="text-3xl font-bold text-gray-800 dark:text-white">1,234</p>
                    <p class="text-sm text-green-600" data-translate="increase_last_month">+12% from last month</p>
                </div>
                <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
                    <i class="fas fa-newspaper text-blue-600 dark:text-blue-400 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="total_users">Total Users</p>
                    <p class="text-3xl font-bold text-gray-800 dark:text-white">5,678</p>
                    <p class="text-sm text-green-600" data-translate="increase_last_month_8">+8% from last month</p>
                </div>
                <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center">
                    <i class="fas fa-users text-green-600 dark:text-green-400 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="page_views">Page Views</p>
                    <p class="text-3xl font-bold text-gray-800 dark:text-white">89,012</p>
                    <p class="text-sm text-red-600" data-translate="decrease_last_month">-3% from last month</p>
                </div>
                <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center">
                    <i class="fas fa-eye text-purple-600 dark:text-purple-400 text-xl"></i>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="media_files">Media Files</p>
                    <p class="text-3xl font-bold text-gray-800 dark:text-white">2,345</p>
                    <p class="text-sm text-green-600" data-translate="increase_last_month_15">+15% from last month</p>
                </div>
                <div class="w-12 h-12 bg-yellow-100 dark:bg-yellow-900 rounded-lg flex items-center justify-center">
                    <i class="fas fa-photo-video text-yellow-600 dark:text-yellow-400 text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4" data-translate="website_traffic">Website Traffic</h3>
            <div class="chart-container">
                <div class="flex items-center justify-center h-full text-gray-500 dark:text-gray-400">
                    <div class="text-center">
                        <i class="fas fa-chart-line text-4xl mb-2"></i>
                        <p data-translate="chart_placeholder">Chart would be displayed here</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4" data-translate="content_performance">Content Performance</h3>
            <div class="space-y-4">
                <div>
                    <div class="flex justify-between text-sm mb-1">
                        <span class="text-gray-600 dark:text-gray-400" data-translate="articles">Articles</span>
                        <span class="text-gray-800 dark:text-white">75%</span>
                    </div>
                    <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                        <div class="bg-blue-600 h-2 rounded-full progress-bar" style="width: 75%"></div>
                    </div>
                </div>
                <div>
                    <div class="flex justify-between text-sm mb-1">
                        <span class="text-gray-600 dark:text-gray-400" data-translate="videos">Videos</span>
                        <span class="text-gray-800 dark:text-white">60%</span>
                    </div>
                    <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                        <div class="bg-green-600 h-2 rounded-full progress-bar" style="width: 60%"></div>
                    </div>
                </div>
                <div>
                    <div class="flex justify-between text-sm mb-1">
                        <span class="text-gray-600 dark:text-gray-400" data-translate="images">Images</span>
                        <span class="text-gray-800 dark:text-white">85%</span>
                    </div>
                    <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                        <div class="bg-purple-600 h-2 rounded-full progress-bar" style="width: 85%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-semibold text-gray-800 dark:text-white" data-translate="recent_activity">Recent Activity</h3>
        </div>
        <div class="p-6">
            <div class="space-y-4">
                <div class="flex items-center space-x-4 rtl:space-x-reverse">
                    <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center">
                        <i class="fas fa-plus text-blue-600 dark:text-blue-400"></i>
                    </div>
                    <div class="flex-1">
                        <p class="text-gray-800 dark:text-white" data-translate="article_published">New article published: "Democratic Reforms in Syria"</p>
                        <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="hours_ago_2">2 hours ago</p>
                    </div>
                </div>
                <div class="flex items-center space-x-4 rtl:space-x-reverse">
                    <div class="w-10 h-10 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center">
                        <i class="fas fa-user-plus text-green-600 dark:text-green-400"></i>
                    </div>
                    <div class="flex-1">
                        <p class="text-gray-800 dark:text-white" data-translate="user_registered">New user registered: Ahmed Al-Damasci</p>
                        <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="hours_ago_4">4 hours ago</p>
                    </div>
                </div>
                <div class="flex items-center space-x-4 rtl:space-x-reverse">
                    <div class="w-10 h-10 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center">
                        <i class="fas fa-video text-purple-600 dark:text-purple-400"></i>
                    </div>
                    <div class="flex-1">
                        <p class="text-gray-800 dark:text-white" data-translate="video_uploaded">Video uploaded: "Educational Initiatives 2024"</p>
                        <p class="text-sm text-gray-600 dark:text-gray-400" data-translate="hours_ago_6">6 hours ago</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>