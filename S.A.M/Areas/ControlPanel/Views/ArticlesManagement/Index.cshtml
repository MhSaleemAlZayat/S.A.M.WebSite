@{
}
<!-- Articles Management Section -->
<div id="content-section" class="content-section fade-in">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white" data-translate="articles_management">إدارة المحتوى</h2>
        <button class="bg-primary text-white px-4 py-2 rounded-lg hover:bg-primary/90 transition-colors">
            <i class="fas fa-plus mr-2 rtl:mr-0 rtl:ml-2"></i><span data-translate="add_new_article">إضافة مقال جديد</span>
        </button>
    </div>

    <!-- Content Filters -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 mb-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <select class="border border-gray-300 dark:border-gray-600 rounded-lg px-3 py-2 bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                <option data-translate="all_categories">جميع الفئات</option>
                <option data-translate="politics">السياسة</option>
                <option data-translate="education">التعليم</option>
                <option data-translate="economy">الاقتصاد</option>
                <option data-translate="international">دولي</option>
            </select>
            <select class="border border-gray-300 dark:border-gray-600 rounded-lg px-3 py-2 bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                <option data-translate="all_languages">جميع اللغات</option>
                <option data-translate="arabic">العربية</option>
                <option data-translate="english">الإنجليزية</option>
                <option data-translate="french">الفرنسية</option>
            </select>
            <select class="border border-gray-300 dark:border-gray-600 rounded-lg px-3 py-2 bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                <option data-translate="all_status">جميع الحالات</option>
                <option data-translate="published">منشور</option>
                <option data-translate="draft">مسودة</option>
                <option data-translate="pending">في الانتظار</option>
            </select>
            <input type="text" data-translate-placeholder="search_articles" placeholder="البحث في المقالات..." class="border border-gray-300 dark:border-gray-600 rounded-lg px-3 py-2 bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
        </div>
    </div>

    <!-- Articles Table -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
        <table class="w-full">
            <thead class="bg-gray-50 dark:bg-gray-700">
                <tr>
                    <th class="px-6 py-3 text-left rtl:text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider" data-translate="title">العنوان</th>
                    <th class="px-6 py-3 text-left rtl:text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider" data-translate="category">الفئة</th>
                    <th class="px-6 py-3 text-left rtl:text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider" data-translate="language">اللغة</th>
                    <th class="px-6 py-3 text-left rtl:text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider" data-translate="status">الحالة</th>
                    <th class="px-6 py-3 text-left rtl:text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider" data-translate="date">التاريخ</th>
                    <th class="px-6 py-3 text-left rtl:text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider" data-translate="actions">الإجراءات</th>
                </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900 dark:text-white" data-translate="democratic_reforms_syria">الإصلاحات الديمقراطية في سوريا</div>
                        <div class="text-sm text-gray-500 dark:text-gray-400" data-translate="comprehensive_plan">خطة شاملة للانتقال السياسي...</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800" data-translate="politics">السياسة</span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white" data-translate="arabic">العربية</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800" data-translate="published">منشور</span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">Dec 30, 2024</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <button class="text-indigo-600 hover:text-indigo-900 mr-3 rtl:mr-0 rtl:ml-3" data-translate="edit">تحرير</button>
                        <button class="text-red-600 hover:text-red-900" data-translate="delete">حذف</button>
                    </td>
                </tr>
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900 dark:text-white" data-translate="educational_reform_initiative">مبادرة الإصلاح التعليمي</div>
                        <div class="text-sm text-gray-500 dark:text-gray-400" data-translate="new_programs_students">برامج جديدة للطلاب السوريين...</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800" data-translate="education">التعليم</span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white" data-translate="english">الإنجليزية</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800" data-translate="draft">مسودة</span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">Dec 29, 2024</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <button class="text-indigo-600 hover:text-indigo-900 mr-3 rtl:mr-0 rtl:ml-3" data-translate="edit">تحرير</button>
                        <button class="text-red-600 hover:text-red-900" data-translate="delete">حذف</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>